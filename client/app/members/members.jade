div(ng-include='"components/navbar/navbar.html"')

.row
	.col.s12.m10
		#keep-busy.section.scrollspy
			br
			.row
				h1.thin.center-align(data-i18n="members.busy-heading")
			hr
			.row
				.col.s12
					.card-panel
						p(data-i18n='members.busy-dets')
				.row
					.col.s12.m6.l3(ng-repeat="announcement in news")
						.card.blue-grey.darken-1.hoverable
							.card-content.white-text
								span.card-title {{announcement.heading}}
								p {{announcement.details}}
							.card-action
								a(href="{{announcement.url}}" target="_blank") Read More
				.row
					.col.s12.m6.l3(ng-repeat="event in events")
						.card.blue-grey.darken-1.hoverable
							.card-content.white-text
								span.card-title {{event.name}}
								p Where: {{event.location}}
								p When: {{event.time}}
		br
		#rights.section.scrollspy
			.row
				h1.thin.center-align(data-i18n="members.rights")
			hr
			.row
				.card-panel
					p.center-align.flow-text(data-i18n="members.rights-dets")
					hr
					.row
						.col.s12.m6
							.video-container.no-controls
								iframe(type="text/html" width="853" height="480px" src="http://www.youtube.com/embed/4Rm-kKATSqk?autoplay=0&loop=0&showinfo=0&theme=dark&color=red&controls=1&modestbranding=0&start=0&fs=1&iv_load_policy=1&wmode=transparent&rel=1" frameborder="0" allowfullscreen)
						.col.s12.m6
							p(data-i18n="members.brothers")
							p(data-i18n="members.meeting")
					.row
						.col.s12
							h4.thin(data-i18n='members.note')
							p(data-i18n='members.note-dets')
		br
		#job.section.scrollspy
			.row
				h1.thin.center-align(data-i18n="members.job-heading")
			hr
			.row
				.card-panel
					p
						span(data-i18n='members.help')
						a(href='#', data-i18n='members.document')
						span(data-i18n='members.aval-jobs')
					p
						span(data-i18n='members.updated-list')
						a.modal-trigger(data-i18n='members.reporting-available', href="#available")
						span(data-i18n='members.agents-verify')
					p
						span(data-i18n='members.new-job')
						a.modal-trigger(data-i18n='members.submit-report', href='#report')
						span(data-i18n='members.maintain-standards')
					p(data-i18n='members.important-know')
		br
		#boycotts.section.scrollspy
			.row
				h1.thin.center-align(data-i18n="members.boycott-heading")
			hr
			.row
				.card-panel
					p
						span(data-i18n='members.boycott-dets')
				.col.s12.m6
					ul.collection.with-header.z-depth-1
						li.collection-header
							h5.thin(data-i18n="members.boycott-buy")
						li.collection-item(ng-repeat='boycott in boycotts | filter:{boycott: false}') {{boycott.name}}
				.col.s12.m6
					ul.collection.with-header.z-depth-1
						li.collection-header
							h5.thin(data-i18n="members.boycott-dont")
						li.collection-item(ng-repeat='boycott in boycotts | filter:{boycott: true}') {{boycott.name}}
		br
		#benefits.section.scrollspy
			.row
				h1.thin.center-align(data-i18n="members.benefits-heading")
			hr
			.row
				.card-panel
					p
						span(data-i18n='members.benefits-dets')
						a(data-i18n='members.benefits-here', href="/assets/documents/summary.pdf", target="_target")
		br
		#resume.section.scrollspy
			.row
				h1.thin.center-align(data-i18n="members.resume-heading")
			hr
			.row
				.card-panel
					p
						span(data-i18n='members.resume-can')
						a(data-i18n='members.resume-print', href="#")
						span(data-i18n='members.resume-your')
						a.modal-trigger(data-i18n='members.resume-submit', href="#resume_submit")
						span(data-i18n='members.resume-us')
	.col.hide-on-small-only.m2.l2

		ul.section.table-of-contents
			li
				a(href="#keep-busy", data-i18n='members.keep-busy-scroll')
			li
				a(href="#rights", data-i18n='members.rights')
			li
				a(href="#job", data-i18n='members.job-heading')
			li
				a(href="#boycotts", data-i18n='members.boycott-heading')
			li
				a(href="#benefits", data-i18n='members.benefits-scroll')
			li
				a(href="#resume", data-i18n='members.resume-heading')
			li
				hr
			li
				a(href="/admin", ng-show='isAdmin()', data-i18n='members.admin')
			li
				a(href='/settings', data-i18n='members.settings')
			li
				a(href='#', data-i18n='members.logout', ng-click='logout()')


//END: main content

//START: modals
#available.modal.modal-fixed-footer
	.modal-content
		h4.center-align.thin.uppercase(data-i18n='contractors.receive')
		
	.modal-footer
		a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href="#") Close
		a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href="#") Submit


#report.modal.modal-fixed-footer
	.modal-content
		h4.center-align.thin.uppercase(data-i18n='contractors.receive')
		
	.modal-footer
		a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href="#") Close
		a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href="#") Submit

#resume_submit.modal.modal-fixed-footer
	.modal-content
		h4.center-align.thin.uppercase(data-i18n='contractors.receive')
		
	.modal-footer
		a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href="#") Close
		a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href="#") Submit

div(ng-include='"components/footer/footer.html"')